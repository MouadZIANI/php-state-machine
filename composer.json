{
    "name": "mouadziani/xstate",
    "description": "A lightweight php library to implement state machine pattern into your php project",
    "keywords": [
        "mouadziani",
        "state machine",
        "saga",
        "xstate"
    ],
    "homepage": "https://github.com/mouadziani/xstate",
    "license": "MIT",
    "authors": [
        {
            "name": "Mouad Ziani",
            "email": "mouad.ziani1997@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Mouadziani\\XState\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mouadziani\\XState\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
